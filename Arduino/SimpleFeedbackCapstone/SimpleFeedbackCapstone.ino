void setup()
{

    display.begin(SSD1306_SWITCHCAPVCC, 0x3C);  // begins display, displays arduino logo by default
    display.clearDisplay();                     //This will clear the adafruit logo

    pinMode(buttonPin, INPUT);                  //Button pin
    pinMode(buzzerPin, OUTPUT);                 //For the buzzer
    pinMode(ledPin, OUTPUT);                    //For the ledPin
    //pinMode(beepPin, OUTPUT);

    Serial.begin(9600);
}

void loop()
{

    if (!eyesOn && !eyesOnOnce)                 //Default state is to display open eyes (rectangles), so if device isnt displaying that, displays open eyes. Also checks to see if that same conditional was already ran recently with eyesOnOnce
    {
        displayEyes();
        Serial.println("eyes on");
        eyesOnOnce = true;
    }

    if (digitalRead(buttonPin))                 //Reads input from button
    {
        digitalWrite(ledPin, HIGH);             //Turns on LED
        Serial.println("button pressed");
        closeEyes();                            //Displays closed eyes
        digitalWrite(ledPin, HIGH);
        makeNoise();                            //Plays a noise
        digitalWrite(ledPin, LOW);

        eyesOn = false;                         //Makes it so on next loop, the device knows that the open eyes aren't being displayed
        eyesOnOnce = false;
    }
    else
    {
        digitalWrite(ledPin, LOW);
    }
}

void displayEyes()                              //default eyes (rectangle shape
{
    display.clearDisplay();                     //This will clear the adafruit logo

    display.fillRect(x0, y0, width, height, 1);

    display.display();

    eyesOn = true;                              //Lets arduino know that open eyes are being displayed (default state)
}

void closeEyes()                                //Displayes closed eyes bitmap when button is pressed, meant to mimic closed happy eyes
{

    display.clearDisplay();

    display.drawBitmap(((display.width() - BITMAP_WIDTH) / 2), ((display.height() - BITMAP_HEIGHT) / 2) + 10, myBitmap_bmp, BITMAP_WIDTH, BITMAP_HEIGHT, 1);

    display.display();

    //delay(2000);
}


//Plays sound using a buzzer
void makeNoise()
{
    chord(500);
}

void chord(int duration)
{
    for (int i = 0; i < length; i++)
    {
        tone(beepPin, tones[i]);
        delay(duration);
        noTone(beepPin);
    }
}
